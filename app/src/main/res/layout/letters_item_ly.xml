<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/letter_item_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/letter_one_word_color"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/letters_initial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:textColor="@color/light_dark_color"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="A" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingVertical="6dp"
        android:paddingStart="0dp"
        android:paddingEnd="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/letter_bold_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:textColor="@color/light_dark_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto"
            tools:text="Hello" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/letter_transcript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:textColor="@color/light_dark_color"
            android:textSize="14sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:fontFamily="@font/roboto"
            tools:text="/əbæk/" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/letter_secondary_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:textColor="@color/light_dark_color"
            android:textSize="14sp"
            android:textStyle="normal"
            app:fontFamily="@font/roboto"
            tools:text="Salom" />

    </LinearLayout>

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/round_delete_outline_24"
        android:visibility="gone"
        app:tint="@color/light_dark_color"/>

    <ImageView
        android:id="@+id/add_to_favourites_star"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/sharp_star_border_24"
        app:tint="@color/light_dark_color" />

</LinearLayout>