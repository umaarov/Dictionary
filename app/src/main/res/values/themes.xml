<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TranslateApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.TranslateApp" parent="Base.Theme.TranslateApp" />

    <style name="light_dark_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/outline_nightlight_24</item>
        <item name="android:rotation">310</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="MyCustomizedDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/light_dark_color
        </item> <!-- cancel buttons color -->
        <item name="colorOnSurface">@color/light_dark_color
        </item> <!-- positive button color -->
        <item name="colorSurface">@color/dialog_background_color</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textColor">@color/light_dark_color</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_dark_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>